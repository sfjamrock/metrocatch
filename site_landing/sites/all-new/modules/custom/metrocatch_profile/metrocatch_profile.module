function metrocatch_profile_order_pane_alter(&$panes) {
  $customer_pane_key = NULL;
  // Search Customer Info pane.
  foreach ($panes as $index => $data) {
    if ($data['id'] == 'customer') {
      $customer_pane_key = $index;
      break;
    }
  }
  if (isset($customer_pane_key)) {
